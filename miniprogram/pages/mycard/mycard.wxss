/* miniprogram/pages/mycard.wxss */
#continer{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.chosetime{
  width: 100%;
  height: 60px;
  background-color: #F3F0F0;
  border-radius: 5px;
  box-shadow: 2px 2px 2px #EBEBEB;
  border: 1px solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  z-index: 1;
  top: 1px;
}
.chosetime image{
  width: 24px;
  height: 24px;
}
.picker{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #54C1FE;
  font-family: cursive;
  font-size: 18px;
}
.picker image{
  width: 24px;
  height: 24px;
}
.usercard{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: wrap;
  position: fixed;
  top: 64px;
  z-index: 0;
  padding: 0px;
}

.topinfo{
  width: 100%;
  height: 80px;
  background-color:rgba(255,255,255,0.95);
  border-radius: 6px;
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
/* 选择器匹配属于其父元素的第 N 个子元素，不论元素的类型。 */
.topinfo:nth-child(1){  
  margin-top: 0px !important;
}
.topinfo .userimage{
  width: 150px;
  height: 60px;
  margin-left: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userimage .tips{
  width: 90px;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-wrap: wrap;
}
.tips text{
  text-align: center;
}
.userimage image{
  width: 60px;
  height: 60px;
  overflow: hidden;
  border-radius: 50%;
}
.topinfo .carddays{
  margin-right: 2px;
  font-family:cursive;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nodata{
  width: 128px;
  height: 128px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -64px;
  margin-left: -64px;
}
.nodata image{
  width: 128px;
  height: 128px;
}