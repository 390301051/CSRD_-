/* pages/mine/mine.wxss */
#container{
  width: 100%;
  margin: 0px;
  padding: 0px;
  background-color: rgba(250,251,252,0.6);
  display: flex;
  justify-content: center;
  align-content: flex-start;
  flex-wrap: wrap;
}
#container .backclass{
  width: 100%;
  position: fixed;
  z-index: -1;
}
.topinfo{
  width: 99%;
  height: 80px;
  background-color:rgba(255,255,255,0.95);
  border-radius: 6px;
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
.topinfo .userimage{
  width: 150px;
  height: 64px;
  margin-left: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userimage .tips{
  width: 80px;
  height: 64px;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-wrap: wrap;
}
.userimage image{
  width: 64px;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;
}
.topinfo .carddays{
  margin-right: 10px;
  font-family:cursive;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mineinfo{
  width: 100%;
  height: 50px;
  background-color:rgba(255,255,255,0.98);
  border: 1px solid #E9E9E9;
  border-radius: 2px;
  margin-top: 4px;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
.hoverview{
  background-color: rgba(243,243,243,0.9);
  border: none;
}
.mineinfo .nav{
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  font-family: cursive;
}
.mineinfo image{
  width: 20px;
  height: 20px;
}
.mineinfo .nav text{
  margin-left: 6px;
  font-size:16px;
}
.mineinfo .nav image{
  width: 24px;
  height: 24px;
  margin-left: 5px;
}

#container :nth-child(3){
  margin-top: 18px;
}